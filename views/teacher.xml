<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="teacher_tree_view" model="ir.ui.view">
        <field name="name">teacher.teacher.tree</field>
        <field name="model">teacher.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id_number"/>
                <field name="name"/>
                <field name="group" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="teacher_from_view" model="ir.ui.view">
        <field name="name">teacher.teacher.form</field>
        <field name="model">teacher.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <group>
                            <field name="id_number"/>  
                            <field name="name"/>
                            <field name="group"/>
                        </group>
                        <group>
                            <field name="gender" string = "Gender"/> 
                            <field name="phone" string = "Contact"/>   
                            <field name="about"/>      
                            
                        </group>
                          
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="teacher_action" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="res_model">teacher.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- <menuitem id="teacher_menu" name="BDtask New" sequence="1"/>
    <menuitem id="teacher_sub_menu" name="teacher" parent="teacher_menu" action="teacher_action"/> -->
</odoo>
